@page
@model CUManager.Web.Areas.AdminPanel.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Users";
}
<h1>User List</h1>
<br />
<div class="mb-4">
    <a class="btn btn-primary text-right" asp-page="Create">Create New User</a>
</div>
<br />
<table class="table table-striped" id="userTable">
    <thead>
        <tr>
            <th>User</th>
            <th>Id</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.AllUsersExceptCurrentUser)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Id</td>
                <td>@user.Email</td>
                <td>
                    <div class="btn-group">
                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Action
                        </button>
                        <div class="dropdown-menu shadow animated--grow-in">
                            <a asp-page="/UsersAndRoles/ManageUserRole" asp-route-userId="@user.Id" class="text-info">Manage Role</a>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
