@page "{id?}"
@model IdentityDemo.Areas.Identity.Pages.Admin.ClaimsModel
@{
    int FormId = 0;
}

<div asp-validation-summary="All" class="text-danger m-2"></div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Type</th>
            <th>Value</th>
            <th>Modify</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model.Claims)
        {
            FormId++;
            <tr>
                <td>@claim.Type</td>
                <td>@claim.Value</td>
                <td>
                    <form method="post" id=@("editForm" + FormId)>
                        <input type="hidden" name="Type" value="@claim.Type">
                        <input type="hidden" name="oldValue" value="@claim.Value">
                        <input class="form-control" name="value" value="@claim.Value">
                    </form>
                </td>
                <td>
                    <button type="submit"
                        form=@("editForm" + FormId)
                        class="btn btn-warning" asp-page-handler="editClaim">
                        Edit
                    </button>
                    <button type="submit"
                        form=@("editForm" + FormId)
                        class="btn btn-danger" asp-page-handler="deleteClaim">
                        Delete
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<h1>Add New Claims</h1>
<form method="post" id="addForm">
    <div class="row">
        <div class="col">
            <select class="form-control" name="type">
                @foreach(var claimType in ApplicationClaimTypes.ApplicationClaims){
                    <option value="@claimType">@claimType</option>
                }
            </select>
        </div>
        <div class="col">
            <input class="form-control" name="value" />
        </div>
        <div class="col">
            <button asp-page-handler="AddClaim" type="submit" class="btn btn-success">Add</button>
        </div>
    </div>
</form>
