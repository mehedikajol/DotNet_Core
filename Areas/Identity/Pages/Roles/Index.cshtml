@page
@model IdentityDemo.Areas.Identity.Pages.Roles.IndexModel
@{
    ViewData["Title"] = "Roles";
}

<a class="btn btn-primary mb-4 text-right" asp-page="Create">Create Role</a>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var role in Model.Roles){
            <tr>
                <td>@role.Name</td>
                <td><a class="btn btn-info" asp-page="ManageClaims" asp-route-id="@role.Id">Manage Claims</a></td>
            </tr>
        }
        
    </tbody>
</table>